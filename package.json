{
  "private": true,
  "engines": {
    "node": ">=0.10.0"
  },
  "devDependencies": {
    "bootstrap-sass": "^3.3.6",
    "browserify": "^12.0.0",
    "browserify-shim": "^3.8.12",
    "clean-css-cli": "^4.1.6",
    "font-awesome": "^4.5.0",
    "jquery": "^2.2.0",
    "jquery-ui": "^1.10",
    "live-server": "^0.9.2",
    "onchange": "^2.0.0",
    "parallelshell": "^2.0.0",
    "uglify-js": "^3.0.28",
    "underscore": "^1.8.3",
    "watchify": "^3.7.0"
  },
  "scripts": {
    "sass": "sass --style compressed --update app/styles/:app/styles/",
    "browserify": "browserify app/scripts/index.js -o app/scripts/bundle.js",
    "watch:sass": "sass --watch app/styles/:app/styles/",
    "watch:js": "watchify app/scripts/index.js -o app/scripts/bundle.js",
    "server": "live-server --open='app'",
    "watch": "parallelshell 'npm run watch:sass' 'npm run watch:js' 'npm run server'",
    "minify": "npm run minify:js && npm run minify:css",
    "minify:js": "uglifyjs -o app/scripts/bundle.js app/scripts/bundle.js",
    "minify:css": "cleancss --level 2 app/styles/app.css -o app/styles/app.css",
    "build": "npm run minify && npm run dist",
    "dist": "cp -R app/images app/dist && cp -R app/fonts app/dist && cp app/scripts/bundle.js app/dist/scripts && cp app/styles/{app.css,nightmode.css} app/dist/styles/ && cp app/index.html app/dist/index.html"
  },
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  },
  "browserify-shim": {
    "jQuery": "$",
    "underscore": "_"
  }
}
